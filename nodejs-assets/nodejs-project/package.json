{
  "name": "node-project",
  "version": "0.0.1",
  "description": "NodeJS Project",
  "main": "main.js",
  "author": "pedrouid",
  "license": "MIT",
  "scripts": {
    "install": "patch-package",
    "build": "browserify main.js -o bundle.js --node --im"
  },
  "dependencies": {
    "ipfs": "^0.34.4"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "patch-package": "^5.1.1"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            [
              "@babel/preset-env",
              {
                "targets": {
                  "node": "8.6.0"
                }
              }
            ]
          ]
        }
      ]
    ]
  }
}
